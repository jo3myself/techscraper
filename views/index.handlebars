{{#each articles}}
  <ul class="collapsible" data-collapsible="accordion">

    <!-- Article Drop Down -->
    <li>
      <div style="background-color: white; center" class="indigo lighten-4">     
        <div><center>
          <b>{{title}}</b></div></center>
          <center><p>Deal is from {{summary}} website.<i>Click <a href="{{link}}" target="_new">here</a> for the link.</i></p></center>
          <center><p>Deal posted on : {{updated}}<p></center>
        </div>
    </li>


    <li>
      <div class="collapsible-header">Add a Note</div>
        <div class="collapsible-body" style="background-color: white;">
          <form id="form-add-{{_id}}" action="add/note/{{_id}}" method="post" style="background-color: white;">

            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
                <input name="title" type="text" class="validate">
                <label>Note Title:</label>
              </div>
            </div>
          
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
                <textarea id="comment_box" name="note" class="materialize-textarea"></textarea>
                <label for="comment_box">Your Note:</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn addNote" data-id="{{_id}}" type="submit" value="SAVE"></center>
              </div>
            </div>
          
          </form>
      </div>
    </li>


    <li>
      <div class="collapsible-header">View Notes</div>
        <div class="collapsible-body" style="background-color: white;">
      
        {{#if notes}}

          <ul class="collection">
            {{#each notes}}
            
              <li class="collection-item">
                <b>{{title}}</b> 

                <span class="badge">
                  <form id="form-delete-{{_id}}" action="remove/note/{{_id}}" method="post">
                    <input class="btn-small deleteNote" data-id="{{_id}}" type="submit" value="DELETE" style="color: white; background-color: red; border-color: red;">
                  </form>
                </span>

                {{content}}
              </li> 

            {{/each}}
          </ul>
        
        {{else}}
          <p>No Notes</p>
        {{/if}}
                
      </div>
    </li>

  </ul>
{{/each}}